<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
<Appenders>
    <Console name="console" target="SYSTEM_OUT">
        <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n}{INFO=black, WARN=yellow, FATAL=red}" disableAnsi="false"/>
    </Console>
</Appenders>

<Loggers>
    <Root level="debug" additivity="false">
        <AppenderRef ref="console" />
    </Root>
</Loggers>
</configuration>
